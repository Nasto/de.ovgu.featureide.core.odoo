<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Odoo Category"
            id="de.ovgu.featureide.code.odoo.commands.OdooCategory">
      </category>
      <command
            name="Odoo Command"
            categoryId="de.ovgu.featureide.code.odoo.commands.OdooCategory"
            id="de.ovgu.featureide.code.odoo.commands.OdooCommand">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.ovgu.featureide.code.odoo.handler.OdooHandler"
            commandId="de.ovgu.featureide.code.odoo.commands.OdooCommand">
      </handler>
   </extension>
   
    <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.ovgu.featureide.code.odoo.commands.OdooCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Sample Menu"
               mnemonic="M"
               id="de.ovgu.featureide.code.odoo.menus.sampleMenu">
            <command
                  commandId="de.ovgu.featureide.code.odoo.commands.OdooCommand"
                  mnemonic="S"
                  id="de.ovgu.featureide.code.odoo.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.ovgu.featureide.code.odoo.toolbars.sampleToolbar">
            <command
                  commandId="de.ovgu.featureide.code.odoo.commands.OdooCommand"
                  icon="icons/odooIcon.gif"
                  tooltip="Say hello world"
                  id="de.ovgu.featureide.code.odoo.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
